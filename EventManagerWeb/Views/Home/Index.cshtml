@{
    ViewData["Title"] = "Event Manager";
}

<h3>@ViewData["Title"]</h3>

<div class="mdl-grid">

    <div class="mdl-cell mdl-cell--6-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="events">
                @*<h2 class="mdl-card__title-text homeLabel">Events List</h2>*@
            </div>
            <div class="mdl-card__supporting-text">
                View and manage all events.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Events" asp-action="Index">
                    View All Events
                </a>
            </div>
        </div>
    </div>

    <div class="mdl-cell mdl-cell--6-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="guests">
                @*<h2 class="mdl-card__title-text homeLabel">Guests List</h2>*@
            </div>
            <div class="mdl-card__supporting-text">
                View and manage all guests.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Guests" asp-action="Index">
                    View All Guests
                </a>
            </div>
        </div>
    </div>

</div>